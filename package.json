{
  "name": "raycast-zipline",
  "title": "Zipline",
  "description": "Manage your Zipline uploads - browse, upload, and share files easily",
  "icon": "zipline-icon.png",
  "author": "treygordon",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "browse-uploads",
      "title": "Browse Uploads",
      "description": "Browse and search your Zipline uploads",
      "mode": "view"
    },
    {
      "name": "upload-file",
      "title": "Upload File",
      "description": "Upload a new file to Zipline",
      "mode": "view"
    },
    {
      "name": "recent-uploads",
      "title": "Recent Uploads",
      "description": "View your most recent uploads",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "ziplineUrl",
      "type": "textfield",
      "required": true,
      "title": "Zipline URL",
      "description": "Your Zipline instance URL (e.g., https://zipline.example.com)",
      "placeholder": "https://zipline.example.com"
    },
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "Your Zipline API token"
    },
    {
      "name": "pageSize",
      "type": "textfield",
      "required": false,
      "title": "Page Size",
      "description": "Number of uploads to display per page",
      "default": "20",
      "placeholder": "20"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  },
  "version": "1.0.0"
}